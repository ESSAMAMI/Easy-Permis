<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:class="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:background="#ffffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fabric"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >

        <TextView
            android:id="@+id/depassement"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/crushed"
            android:text="DÃ‰PASSEMENT"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/dateExp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/depassement"
            android:layout_below="@+id/depassement"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:text=" Date d'expiration :"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/textDateExp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/depassement"
            android:layout_marginEnd="23dp"
            android:text="2, mars 2018"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/commentaires"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/depassement"
            android:layout_below="@+id/dateExp"
            android:drawableLeft="@drawable/ic_comment_black_24dp"
            android:text=" Commentaires"
            android:textColor="@color/colorPrimary" />


        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_date"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/crushed"
                android:text="5"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mois"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/crushed"
                android:text="JUIL"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/annee"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="19dp"
                android:fontFamily="@font/crushed"
                android:text="2018"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:textStyle="bold" />

        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/c1"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="98dp"
            android:elevation="100dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="0dp">

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/crushed"
            android:text="VIDEO EXPLICATIVE"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="166dp"
            android:fontFamily="@font/crushed"
            android:text="dolor sit amet, consectetur adipiscing elit. Maecenas ut leo vestibulum, auctor mauris eu, accumsan est. Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos himenaeos "
            android:textColor="@color/colorPrimary"
            android:textSize="14dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:elevation="100dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="0dp">

        </android.support.v7.widget.CardView>





    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>